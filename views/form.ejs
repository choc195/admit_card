<!DOCTYPE html>
<html>

<head>
  <title>Enter Student Result</title>
  <style>
    body {
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      line-height: 1.6;
      margin: 0;
      padding: 20px;
      background-color: #f5f5f5;
      color: #333;
    }

    h1,
    h2 {
      color: #2c3e50;
    }

    form {
      max-width: 900px;
      margin: 0 auto;
      background: white;
      padding: 30px;
      border-radius: 8px;
      box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
    }

    label {
      display: block;
      margin-bottom: 8px;
      font-weight: 500;
    }

    input[type="text"],
    input[type="number"] {
      width: 100%;
      padding: 10px;
      margin-bottom: 15px;
      border: 1px solid #ddd;
      border-radius: 4px;
      box-sizing: border-box;
    }

    fieldset {
      border: 1px solid #e0e0e0;
      border-radius: 6px;
      padding: 15px;
      margin-bottom: 20px;
      background-color: #f9f9f9;
      position: relative;
    }

    legend {
      font-weight: bold;
      color: #2c3e50;
      padding: 0 10px;
    }

    button {
      background-color: #3498db;
      color: white;
      border: none;
      padding: 10px 20px;
      border-radius: 4px;
      cursor: pointer;
      font-size: 16px;
      transition: background-color 0.3s;
    }

    button:hover {
      background-color: #2980b9;
    }

    .remove-btn {
      position: absolute;
      top: -28px;
      right: 4px;
      transform: translate(-50%, 50%);
      background-color: #e74c3c;
      color: white;
      border: none;
      width: 39px;
      height: 36px;
      border-radius: 62%;
      font-size: 23px;
      line-height: 25px;
      text-align: center;
      cursor: pointer;
      display: flex;
      justify-content: center;
      align-items: center;
    }

    .remove-btn:hover {
      background-color: #c0392b;
    }

    .subject-grid {
      display: grid;
      grid-template-columns: repeat(2, 1fr);
      gap: 15px;
    }

    .form-section {
      margin-bottom: 25px;
    }

    .form-section h2 {
      border-bottom: 2px solid #3498db;
      padding-bottom: 5px;
      margin-bottom: 20px;
    }
  </style>
  <script>
    function addSubjectRow() {
      const container = document.getElementById('subjects-container');
      const index = container.children.length;

      const row = document.createElement('div');
      row.innerHTML = `
        <fieldset style="margin-bottom: 10px;">
          <legend>Subject ${index + 1}</legend>
          <button type="button" class="remove-btn" onclick="this.parentElement.remove()">Ã—</button>
          <div class="subject-grid">
            <div>
              <label>Code: <input type="text" name="subjects[${index}][code]" required></label>
              <label>Title: <input type="text" name="subjects[${index}][title]" required></label>
              <label>Credits: <input type="number" name="subjects[${index}][credits]" required></label>
              <label>Max Marks: <input type="number" name="subjects[${index}][maxMarks]" required></label>
            </div>
            <div>
              <label>Marks Obtained: <input type="number" name="subjects[${index}][obtained]" required></label>
              <label>Grade: <input type="text" name="subjects[${index}][grade]" required></label>
              <label>Grade Point: <input type="number" step="0.01" name="subjects[${index}][gradePoint]" required></label>
              <label>Credit Point: <input type="number" step="0.01" name="subjects[${index}][creditPoint]" required></label>
            </div>
          </div>
        </fieldset>
      `;
      container.appendChild(row);
    }
  </script>
</head>

<body>
  <h1>Enter Student Result Details</h1>
  <form action="/generate-result" method="POST">
    <div class="form-section">
      <h2>Student Information</h2>
      <div class="subject-grid">
        <div>
          <label>Name: <input type="text" name="name" required></label>
          <label>Father's Name: <input type="text" name="father" required></label>
          <label>Mother's Name: <input type="text" name="mother" required></label>
          <label>Enrollment No: <input type="text" name="enrollment" required></label>
        </div>
        <div>
          <label>Roll No: <input type="text" name="roll" required></label>
          <label>Semester: <input type="text" name="semester" required></label>
          <label>Exam Session: <input type="text" name="exam" required></label>
          <label>Course: <input type="text" name="course" required></label>
        </div>
      </div>
    </div>

    <div class="form-section">
      <h2>Subjects</h2>
      <div id="subjects-container"></div>
      <button type="button" onclick="addSubjectRow()">Add Subject</button>
    </div>

    <button type="submit">Generate Result</button>
  </form>
</body>

</html>